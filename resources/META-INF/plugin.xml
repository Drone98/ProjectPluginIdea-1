<idea-plugin>
  <id>ru.misha.plugin.from russian to english layout</id>
  <name>From Russian to English Layout</name>
  <vendor email="Lampad0307@yandex.ru" url="https://github.com/Drone98">Mikhail Bogdanov</vendor>

  <description>
    This plugin change selected text from Russian to English language.
    Changing based on layout.
  </description>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
   <action
           class="FromRussianToEnglish"
           id="FromRussianToEnglish"
           text="Change layout"
           description="Illustrates how to plug an action">
     <add-to-group group-id="EditorPopupMenu" anchor="first"/>
     <keyboard-shortcut first-keystroke="control alt r" keymap="$default"/>
   </action>
  </actions>

</idea-plugin>